---
import type { FeatureData } from '../types'

interface Props {
  features: FeatureData[]
  buildTimestamp: string
}

const { features, buildTimestamp } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <link
      rel="icon"
      type="image/svg+xml"
      href="/baseline/baseline-limited-availability.svg"
    >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:wght@400;700&family=Atkinson+Hyperlegible+Mono:wght@400;700&display=swap"
    >
    <link
      href="https://fonts.googleapis.com/css2?family=Nabla&display=swap"
      rel="stylesheet"
    >
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="light dark">
    <title>Baseline feature dashboard</title>
    <meta
      name="description"
      content="Keep an eye on Baseline status from webstatus.dev"
    >

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://edouardmisset.github.io/baseline/">
    <meta property="og:title" content="Baseline feature dashboard">
    <meta
      property="og:description"
      content="Keep an eye on Baseline status from webstatus.dev"
    >
    <meta
      property="og:image"
      content="https://edouardmisset.github.io/baseline/og-image.jpg"
    >

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:title" content="Baseline feature dashboard">
    <meta
      property="twitter:description"
      content="Keep an eye on Baseline status from webstatus.dev"
    >
    <meta
      property="twitter:image"
      content="https://edouardmisset.github.io/baseline/og-image.jpg"
    >
  </head>
  <body>
    <div id="app" class="app">
      <slot />
    </div>

    <!-- Preloaded data for runtime hydration (stale-while-revalidate) -->
    <script is:inline define:vars={{ features, buildTimestamp }}>
      window.__PRELOADED_DATA__ = {
        features,
        buildTimestamp,
      }
    </script>
  </body>
</html>

<style is:global>
  @import "../style.css";
</style>
